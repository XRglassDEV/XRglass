{
  "name": "xtrustscore",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "WS_NO_BUFFER_UTIL=1 WS_NO_UTF_8_VALIDATE=1 next dev",
    "build": "WS_NO_BUFFER_UTIL=1 WS_NO_UTF_8_VALIDATE=1 next build",
    "start": "WS_NO_BUFFER_UTIL=1 WS_NO_UTF_8_VALIDATE=1 next start",
    "lint": "next lint || true",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:preview": "standard-version --dry-run"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.74.0",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "undici": "^6.19.8",
    "xrpl": "^4.4.2"
  },
  "devDependencies": {
    "@prisma/client": "^6.16.3",
    "@types/node": "^24.6.1",
    "@types/react": "^19.1.16",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.14.0",
    "eslint-config-next": "15.5.4",
    "postcss": "^8.5.6",
    "prisma": "^6.16.3",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.3"
  },
  "overrides": {
    "bufferutil": "0.0.0-unsupported",
    "utf-8-validate": "0.0.0-unsupported"
  },
  "standard-version": {
    "releaseCommitMessageFormat": "chore(release): {{currentTag}}"
  }
}
